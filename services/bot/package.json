    "effect": "^3",
    "grammy": "^1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^22",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5",
    "vitest": "^4.0.16"
