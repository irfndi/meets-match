{
  "name": "@meetsmatch/bot",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "bun src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
