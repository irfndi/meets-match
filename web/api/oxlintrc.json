{
  "rules": {
    "typescript": "error",
    "correctness": "error",
    "suspicious": "error",
    "perf": "warn",
    "style": "warn",
    "nursery": "off"
  },
  "env": {
    "node": true,
    "es2022": true
  },
  "globals": {
    "process": "readonly",
    "Buffer": "readonly",
    "__dirname": "readonly",
    "__filename": "readonly"
  },
  "ignore": [
    "dist/**",
    "node_modules/**",
    "*.config.js",
    "*.config.ts"
  ]
}