{
  "name": "meetsmatch-api",
  "version": "1.0.0",
  "description": "MeetsMatch Web API - TypeScript/Express backend service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun run tsc",
    "start": "bun dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "oxlint src",
    "lint:fix": "oxlint src --fix",
    "typecheck": "bun run tsc --noEmit"
  },
  "keywords": ["telegram", "bot", "api", "typescript", "express"],
  "author": "MeetsMatch Team",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "redis": "^5.8.1",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "joi": "^18.0.0",
    "multer": "^2.0.2",
    "sharp": "^0.34.3",
    "dotenv": "^17.2.1",
    "uuid": "^11.1.0",
    "compression": "^1.8.1",
    "rate-limiter-flexible": "^7.2.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/cors": "^2.8.19",
    "@types/morgan": "^1.9.10",
    "@types/pg": "^8.15.5",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "@types/compression": "^1.8.1",
    "@types/node": "^24.3.0",
    "@vitest/ui": "^3.2.4",
    "vitest": "^3.2.4",
    "oxlint": "^1.11.2",
    "supertest": "^7.1.4",
    "@types/supertest": "^6.0.3",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.2.0"
  }
}