# MeetsMatch Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# BOT SERVICE CONFIGURATION
# ============================================

# Required: Telegram Bot Token (get from @BotFather: https://t.me/BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Optional: API URL (default: http://localhost:8080)
# In Docker/Coolify, use the container name: http://api:8080
# API_URL=http://localhost:8080

# Optional: Health check port (default: 3000)
# HEALTH_PORT=3000

# ============================================
# API SERVICE CONFIGURATION
# ============================================

# Required for API: Database connection string
# Format: postgres://user:password@host:port/database?sslmode=disable
DATABASE_URL=postgres://postgres:your_password@localhost:5432/meetsmatch?sslmode=disable

# Optional: HTTP server address (default: :8080)
# HTTP_ADDR=:8080

# Optional: gRPC server address (default: :50051)
# GRPC_ADDR=:50051

# Optional: Redis connection string (default: redis://localhost:6379/0)
# REDIS_URL=redis://localhost:6379/0

# ============================================
# DATABASE CONFIGURATION (for docker-compose)
# ============================================

# Required for docker-compose: PostgreSQL password
POSTGRES_PASSWORD=your_secure_password_here

# Optional: PostgreSQL configuration (defaults shown)
# POSTGRES_USER=postgres
# POSTGRES_DB=meetsmatch

# ============================================
# ERROR TRACKING (SENTRY/GLITCHTIP)
# ============================================

# Optional: Sentry/GlitchTip DSN for error tracking
# SENTRY_DSN=https://your-key@your-glitchtip-or-sentry-url/project-id

# Optional: Environment name (default: development)
# SENTRY_ENVIRONMENT=development

# Optional: Release version identifier
# SENTRY_RELEASE=meetsmatch@1.0.0

# Optional: Enable error tracking (must be exactly "true" to enable)
# Requires SENTRY_DSN to be set
# ENABLE_SENTRY=true

# Optional: Traces sample rate for performance monitoring (default: 0.2)
# SENTRY_TRACES_SAMPLE_RATE=0.2
